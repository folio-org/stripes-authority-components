    "@folio/stripes": "^8.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^5.8.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0"
  }
